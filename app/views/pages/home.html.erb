<section>
  <div class="main">
  <h1>Productos</h1>
  <ul class="cards">
  <% @products.each do |product| %>
      <li class="cards_item">
        <div class="card">
          <div class="card_image"><img src= <%=product.imagen %>></div>
          <div class="card_content">
            <h2 class="card_title"><%=product.name %></h2>

            <h1 >$<%=product.price %></h1>


            <%= link_to "Read more", product_path(product), class: "btn card_btn" %>

          </div>
        </div>
      </li>
  <% end %>
  </ul>
</div>


</section>
