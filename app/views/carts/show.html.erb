


<div class="card mb-5 pb-5">
       <div class="card-body">
              <% @order.orderitems.includes(:product).each do |item| %>
                     <div class="row">
                            <div class="col-xs-2 col-md-2">

                                   <%= image_tag item.product.imagen, class: "ml-5 mt-3" %>
                            </div>
                            <div class="col-xs-4 col-md-6">
                                   <h4 class="product-name"><strong><%= item.product.name%></strong></h4><h4><small><%= item.product.description %></small></h4>
                                   <%= link_to '<h5 class="fas fa-trash-alt"></h5>'.html_safe, destroy_cart_item_path(item.id), method: :delete, class: "d-inline" %>
                            </div>
                            <div class="col-xs-6 col-md-4 row">
                                   <div class="col-xs-6 col-md-6 text-right"style="padding-top: 5px">
                                          <h6><strong><%= item.price%> <span class="text-muted">x</span></strong></h6>
                                   </div>
                            <div class="col-xs-4 col-md-4">
                                   <%= item.quantity %>
                            </div>
                            <div class="col-xs-2 col-md-2"></div>
                     </div>
              </div>
              <hr>
       <% end %>
       </div>
       <div class="card-footer">

              <div class="pull-right" style="margin: 5px">
              Total: $<b><%= @order.total %></b>
              </div>
       </div>
</div>

